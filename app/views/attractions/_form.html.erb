<%= render partial: '/shared/errors', locals: {obj: @attraction}%>

<%= form_for [@attraction] do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :description %><br>
    <%= f.text_area :description %><br><br>

    <% if @attraction.destination_id.nil? %>
    <%= render partial: '/destinations/form', locals: {obj: f}%>
    
    <%= f.submit %>
   
    <% else %>
    <%= f.hidden_field :destination_id, value: @attraction.destination.id %>
    <%= f.submit %>
    <% end %>

    <% end %>

