<!DOCTYPE html>
<html>
  <head>
    <title>Wanderlust</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="wrapper">
    <% if logged_in?%>
    <%= link_to "My Profile", user_path(current_user) %> |
    <%= link_to "All Trips", trips_path %> |
    <%= link_to "All Itineraries", itineraries_path %> |
    <%= link_to "All Destinations", destinations_path %> |
    <%= link_to "All Attractions", attractions_path %>
    
    <% else %>
      <% end %><br><br>
    <%= yield %>
    
  </body>
  <footer class="branding">
      <% if logged_in?%>
      Logged in as <%=current_user.first_name.upcase %><br>
      <%= link_to "Log Out", logout_path, method: 'delete' %></p>
      <% else %>
      <% end %>
        <small>&copy; 2020 <strong>Wanderlust</strong></small>
      </footer>
      </div>
</html>

